<div class='container-fluid'>
  <div class='jumbotron'>
    <div class='container'>
      <h1 class="text-center"> Recipe Box </h1>
    </div>
  </div>

    <h3>Tags</h3>
    <div class='well'>
      <ul> <% if @tags.any?() %>
            <% @tags.each do |tag| %>
        <li class=""><a href="/tags/<%= tag.id() %>"><%= tag.description() %></a></li>
            <% end %>
            <% else %>
            <h5> No recipes have tags. So sad. </h5>
      </ul>
        <% end %>
    </div>

      <h3>Recipes</h3>
      <ul>
        <% if @recipes.any?() %>
        <% @recipes.each do |recipe| %>

        <table class="table table-striped table-hover ">
          <tbody>
            <tr class='info'>
              <li>
                <a href="/recipes/<%= recipe.id() %>"><%= recipe.name() %></a>
                <form action="/recipes/<%= recipe.id() %>" method="post" >
                  <input type="hidden"value="delete"  name="_method">
                  <button class='btn btn-danger btn-xs' type='submit'>Toss It!</button>
                </form>
              </li>
            </tr>
          </tbody>
        </table>

        <% end %>

        <% else %>

        <h5>There are no recipes in your box. Go check out Jamie Oliver! </h5>

      </ul>
      <% end %>



    <div class='well'>
        <form id="recipes" action="/recipes" method="post" class='form-horizontal'>
          <fieldset>
            <legend>Add a Recipe Name</legend>
            <div class='form-group'>
              <label for="name" class="col-lg-2 control-label">Write a Recipe!</label>
              <div class="col-lg-10">
                <input type="text" class="form-control" name="name" id="name" placeholder="ex: Paella, Pulled-Pork, Pecan Pie">
                <button name="button" class="btn btn-primary">Dish It!</button>
              </div>
            </div>
          </fieldset>
        </form>
    </div>
  </div>

</div>
