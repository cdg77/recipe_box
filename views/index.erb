<div class='container-fluid'>
  <div class='jumbotron'>
    <div class='container'>
      <h1 class="text-center"> Recipe Box </h1>
    </div>
  </div>

    <h3>Tag</h3>
    <ul> <% if @tags.any?() %>
          <% @tags.each do |tag| %>
      <li><a href="/tags/<%= tag.id() %>"><%= tag.description() %></a></li>
          <% end %>
          <% else %>
          <h5> There are no tags in your box. So sad. </h5>
    </ul>
      <% end %>

    <div class="well">
      <form class="form-horizontal" action= "/tags" method="post">
        <fieldset>
          <legend></legend>
          <div class="form-group">
            <label for="description" class="col-lg-2 control-label">Make your own!</label>
            <div class="col-lg-10">
              <input type="text" class="form-control" name="description" id="description" placeholder="ex: Rustic, Fall, Romance, Bromance">
              <button name="button" class="btn btn-primary">Tag It</button>
            </div>
          </div>
        </fieldset>
      </form>
    </div>

    <h3>Recipes</h3>
    <ul>
      <% if @recipes.any?() %>
      <% @recipes.each do |recipe| %>

      <li><a href="/recipes/<%= recipe.id() %>"><%= recipe.name() %></a></li>

      <% end %>

      <% else %>

      <h5>There are no recipes in your box. Go check out Jamie Oliver! </h5>

    </ul>
    <% end %>


    <div class='well'>
        <form id="recipes" action="/recipes" method="post" class='form-horizontal'>
          <fieldset>
            <legend>Add a Recipe Name</legend>
            <div class='form-group'>
              <label for="name" class="col-lg-2 control-label">Write a Recipe!</label>
              <div class="col-lg-10">
                <input type="text" class="form-control" name="name" id="name" placeholder="ex: Paella, Pulled-Pork, Pecan Pie">
                <button name="button" class="btn btn-primary">Dish It!</button>
              </div>
            </div>
          </fieldset>
        </form>
    </div>
  </div>

</div>
